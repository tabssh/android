<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Network permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Biometric authentication -->
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    
    <!-- File access -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" 
        android:maxSdkVersion="28" />
    
    <!-- Wake lock for persistent connections -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <!-- Vibration for notifications -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- Post notifications (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Override Termux library minSdk requirement (24) to maintain our minSdk (21) -->
    <!-- Termux terminal-emulator may use some API 24 features, test on older devices -->
    <uses-sdk tools:overrideLibrary="com.termux.terminal,com.termux.view" />

    <application
        android:name=".TabSSHApplication"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TabSSH.Dark"
        android:hardwareAccelerated="true"
        android:largeHeap="true"
        tools:targetApi="31">

        <!-- Main activity - Connection list -->
        <activity
            android:name=".ui.activities.MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Terminal activity - Tabbed SSH sessions -->
        <activity
            android:name=".ui.activities.TabTerminalActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.activities.MainActivity"
            android:windowSoftInputMode="adjustResize" />

        <!-- Connection edit activity -->
        <activity
            android:name=".ui.activities.ConnectionEditActivity"
            android:exported="false"
            android:parentActivityName=".ui.activities.MainActivity"
            android:windowSoftInputMode="adjustResize" />

        <!-- Settings activity -->
        <activity
            android:name=".ui.activities.SettingsActivity"
            android:exported="false"
            android:parentActivityName=".ui.activities.MainActivity"
            android:windowSoftInputMode="adjustResize" />

        <!-- Audit Log Viewer activity -->
        <activity
            android:name=".ui.activities.AuditLogViewerActivity"
            android:exported="false"
            android:parentActivityName=".ui.activities.SettingsActivity"
            android:windowSoftInputMode="adjustResize" />

        <!-- Log Viewer activity -->
        <activity
            android:name=".ui.activities.LogViewerActivity"
            android:exported="false"
            android:parentActivityName=".ui.activities.SettingsActivity"
            android:windowSoftInputMode="adjustResize" />

        <!-- SSH Key Management activity -->
        <activity
            android:name=".ui.activities.KeyManagementActivity"
            android:exported="false"
            android:parentActivityName=".ui.activities.MainActivity"
            android:windowSoftInputMode="adjustResize" />

        <!-- Keyboard Customization activity -->
        <activity
            android:name=".ui.activities.KeyboardCustomizationActivity"
            android:exported="false"
            android:parentActivityName=".ui.activities.SettingsActivity"
            android:windowSoftInputMode="adjustResize" />

        <!-- Group Management activity -->
        <activity
            android:name=".ui.activities.GroupManagementActivity"
            android:exported="false"
            android:parentActivityName=".ui.activities.MainActivity"
            android:windowSoftInputMode="adjustResize" />

        <!-- Snippet Management activity -->
        <activity
            android:name=".ui.activities.SnippetManagerActivity"
            android:exported="false"
            android:parentActivityName=".ui.activities.MainActivity"
            android:windowSoftInputMode="adjustResize" />

        <!-- Cluster Command activity -->
        <activity
            android:name=".ui.activities.ClusterCommandActivity"
            android:exported="false"
            android:label="Cluster Commands"
            android:parentActivityName=".ui.activities.MainActivity"
            android:windowSoftInputMode="adjustResize" />

        <!-- Proxmox Manager activity -->
        <activity
            android:name=".ui.activities.ProxmoxManagerActivity"
            android:exported="false"
            android:label="Proxmox Manager"
            android:parentActivityName=".ui.activities.MainActivity"
            android:windowSoftInputMode="adjustResize" />

        <!-- XCP-ng Manager activity -->
        <activity
            android:name=".ui.activities.XCPngManagerActivity"
            android:exported="false"
            android:label="XCP-ng Manager"
            android:parentActivityName=".ui.activities.MainActivity"
            android:windowSoftInputMode="adjustResize" />

        <!-- VMware Manager activity -->
        <activity
            android:name=".ui.activities.VMwareManagerActivity"
            android:exported="false"
            android:label="VMware Manager"
            android:parentActivityName=".ui.activities.MainActivity"
            android:windowSoftInputMode="adjustResize" />

        <!-- VM Console activity (serial console via hypervisor API) -->
        <activity
            android:name=".ui.activities.VMConsoleActivity"
            android:exported="false"
            android:label="VM Console"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"
            android:windowSoftInputMode="adjustResize" />

        <!-- Hypervisor Edit activity -->
        <activity
            android:name=".ui.activities.HypervisorEditActivity"
            android:exported="false"
            android:label="Edit Hypervisor"
            android:parentActivityName=".ui.activities.MainActivity"
            android:windowSoftInputMode="adjustResize" />

        <!-- SFTP file browser activity -->
        <activity
            android:name=".ui.activities.SFTPActivity"
            android:exported="false"
            android:parentActivityName=".ui.activities.TabTerminalActivity"
            android:windowSoftInputMode="adjustResize" />

        <!-- Port Forwarding activity -->
        <activity
            android:name=".ui.activities.PortForwardingActivity"
            android:exported="false"
            android:label="Port Forwarding"
            android:parentActivityName=".ui.activities.TabTerminalActivity"
            android:windowSoftInputMode="adjustResize" />

        <!-- Background service for persistent connections -->
        <service
            android:name=".services.SSHConnectionService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <!-- Tasker integration service -->
        <service
            android:name=".automation.TaskerIntentService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="io.github.tabssh.action.CONNECT" />
                <action android:name="io.github.tabssh.action.DISCONNECT" />
                <action android:name="io.github.tabssh.action.SEND_COMMAND" />
                <action android:name="io.github.tabssh.action.SEND_KEYS" />
            </intent-filter>
        </service>

        <!-- File provider for sharing files -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_provider_paths" />
        </provider>

        <!-- Widget configuration activity -->
        <activity
            android:name=".ui.activities.WidgetConfigurationActivity"
            android:exported="false"
            android:theme="@style/Theme.TabSSH.Dark">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <!-- Quick Connect Widget -->
        <receiver
            android:name=".ui.widget.QuickConnectWidgetProvider"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info" />
        </receiver>
        
        <activity
            android:name=".ui.activities.IdentityManagementActivity"
            android:label="Manage Identities"
            android:parentActivityName=".ui.activities.MainActivity"
            android:exported="false" />
        
        <activity
            android:name=".ui.activities.TranscriptViewerActivity"
            android:label="Session Transcripts"
            android:parentActivityName=".ui.activities.TabTerminalActivity"
            android:exported="false" />

        <!-- Widget Configuration Activity -->
        <activity
            android:name=".widget.WidgetConfigActivity"
            android:label="Configure Widget"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <!-- 1x1 Widget -->
        <receiver
            android:name=".widget.ConnectionWidgetProvider"
            android:label="TabSSH 1x1"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_1x1_info" />
        </receiver>

        <!-- 2x1 Widget -->
        <receiver
            android:name=".widget.ConnectionWidgetProvider$Widget2x1"
            android:label="TabSSH 2x1"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_2x1_info" />
        </receiver>

        <!-- 4x2 Widget -->
        <receiver
            android:name=".widget.ConnectionWidgetProvider$Widget4x2"
            android:label="TabSSH 4x2"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_4x2_info" />
        </receiver>

        <!-- 4x4 Widget -->
        <receiver
            android:name=".widget.ConnectionWidgetProvider$Widget4x4"
            android:label="TabSSH 4x4"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_4x4_info" />
        </receiver>

    </application>

</manifest>