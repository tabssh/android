<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_md">

            <!--ConnectionSelector-->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_md"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/space_md"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ“Š Performance Monitor"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />

                    <Spinner
                        android:id="@+id/spinner_connection"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:prompt="@string/select_connection" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!--CPUChart-->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginBottom="@dimen/space_md"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/space_md">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CPU Usage"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart_cpu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/space_sm" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!--Memory&DiskRow-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/space_md">

                <!--MemoryCard-->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/space_sm"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/space_md"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Memory"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorPrimary" />

                        <TextView
                            android:id="@+id/text_memory_percent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginVertical="@dimen/space_sm" />

                        <TextView
                            android:id="@+id/text_memory_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 MB / 0 MB"
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!--DiskCard-->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/space_sm"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/space_md"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Disk"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorPrimary" />

                        <TextView
                            android:id="@+id/text_disk_percent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginVertical="@dimen/space_sm" />

                        <TextView
                            android:id="@+id/text_disk_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 GB / 0 GB"
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!--Network&LoadRow-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/space_md">

                <!--NetworkCard-->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/space_sm"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/space_md"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Network"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorPrimary" />

                        <TextView
                            android:id="@+id/text_network_rx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â†“ 0 KB/s"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginTop="@dimen/space_sm" />

                        <TextView
                            android:id="@+id/text_network_tx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â†‘ 0 KB/s"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginTop="@dimen/space_xs" />

                        <TextView
                            android:id="@+id/text_network_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total: 0 MB"
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:layout_marginTop="@dimen/space_xs" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!--LoadCard-->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/space_sm"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/space_md"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Load Average"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorPrimary" />

                        <TextView
                            android:id="@+id/text_load_1min"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1m: 0.00"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginTop="@dimen/space_sm" />

                        <TextView
                            android:id="@+id/text_load_5min"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5m: 0.00"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginTop="@dimen/space_xs" />

                        <TextView
                            android:id="@+id/text_load_15min"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15m: 0.00"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginTop="@dimen/space_xs" />

                        <TextView
                            android:id="@+id/text_load_processes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0/0 processes"
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:layout_marginTop="@dimen/space_xs" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!--EmptyState(hiddenwhenmonitoring)-->
            <LinearLayout
                android:id="@+id/layout_empty_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/space_xl"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š"
                    android:textSize="64sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select a connection to monitor"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="@dimen/space_md" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!--LoadingProgress-->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminate="true" />

    <!--ControlFAB-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/space_lg"
        android:contentDescription="Start/Stop monitoring"
        app:srcCompat="@drawable/ic_play"
        app:tint="@android:color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
