<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Server Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proxmox Server"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/server_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/add_server_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                style="@style/Widget.Material3.Button.TonalButton" />

        </LinearLayout>

        <!-- Refresh Button -->
        <Button
            android:id="@+id/refresh_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Refresh VMs"
            android:layout_marginTop="8dp"
            style="@style/Widget.Material3.Button" />
        
        <!-- Backup Jobs Button (XO only) -->
        <Button
            android:id="@+id/backup_jobs_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“¦ Backup Jobs"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            style="@style/Widget.Material3.Button.TonalButton" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:indeterminate="true" />

        <!-- Status Text -->
        <TextView
            android:id="@+id/status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No server selected"
            android:textAlignment="center"
            android:padding="8dp" />
        
        <!-- Live indicator for WebSocket connection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="4dp"
            android:gravity="center">
            
            <View
                android:id="@+id/live_indicator"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@android:color/holo_green_light"
                android:visibility="gone" />
            
            <TextView
                android:id="@+id/live_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âš¡ Live Updates"
                android:textSize="12sp"
                android:textColor="?android:textColorSecondary"
                android:layout_marginStart="8dp"
                android:visibility="gone" />
        
        </LinearLayout>

    </LinearLayout>

    <!-- VM List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/vm_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp" />

</LinearLayout>
