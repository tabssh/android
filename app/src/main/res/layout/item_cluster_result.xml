<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/result_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Server Name" />

            <TextView
                android:id="@+id/result_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="âœ… Success" />

            <TextView
                android:id="@+id/result_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                android:paddingStart="8dp"
                android:paddingEnd="0dp"
                android:text="1234ms" />

            <ImageButton
                android:id="@+id/button_copy_output"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Copy output"
                android:src="@drawable/ic_copy"
                android:tooltipText="Copy output to clipboard"
                app:tint="?android:attr/textColorSecondary" />

            <ImageButton
                android:id="@+id/button_toggle_output"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Toggle output"
                android:src="@drawable/ic_expand_more"
                android:tooltipText="Expand/collapse output"
                app:tint="?android:attr/textColorSecondary" />

        </LinearLayout>

        <TextView
            android:id="@+id/result_output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:background="?attr/colorSurface"
            android:padding="8dp"
            android:maxLines="10"
            android:scrollbars="vertical"
            android:visibility="gone"
            android:text="Command output will appear here" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
