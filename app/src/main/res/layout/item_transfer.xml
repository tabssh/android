<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_xs"
    app:cardCornerRadius="8dp"
    app:cardElevation="@dimen/elevation_low">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space_md">

        <!-- Transfer header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/icon_transfer_type"
                android:layout_width="@dimen/icon_size_medium"
                android:layout_height="@dimen/icon_size_medium"
                android:layout_marginEnd="@dimen/space_sm"
                android:src="@drawable/ic_upload"
                android:contentDescription="Transfer type" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_transfer_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_body"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="document.pdf â†’ /home/user/" />

                <TextView
                    android:id="@+id/text_transfer_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_caption"
                    tools:text="Transferring" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_transfer_action"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pause"
                    android:textSize="12sp"
                    android:minWidth="0dp"
                    android:layout_marginEnd="@dimen/space_xs" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_transfer_cancel"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textSize="12sp"
                    android:minWidth="0dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Progress bar -->
        <ProgressBar
            android:id="@+id/progress_transfer"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/progress_bar_height"
            android:layout_marginTop="@dimen/space_sm"
            android:layout_marginBottom="@dimen/space_xs"
            android:max="100"
            tools:progress="45" />

        <!-- Transfer details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_transfer_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_caption"
                android:textColor="?android:attr/textColorSecondary"
                tools:text="2.1 MB / 4.7 MB (45%)" />

            <TextView
                android:id="@+id/text_transfer_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_caption"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginStart="@dimen/space_sm"
                tools:text="1.2 MB/s" />

            <TextView
                android:id="@+id/text_transfer_eta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_caption"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginStart="@dimen/space_sm"
                tools:text="00:02" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>