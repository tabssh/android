<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/space_sm"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/elevation_low">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/list_item_padding"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/icon_connection"
            android:layout_width="@dimen/connection_icon_size"
            android:layout_height="@dimen/connection_icon_size"
            android:src="@drawable/ic_computer"
            android:layout_marginEnd="@dimen/space_md"
            android:contentDescription="Connection icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_connection_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_subtitle"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Production Server" />

            <TextView
                android:id="@+id/text_connection_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_caption"
                android:textColor="?android:attr/textColorSecondary"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="user@example.com:22" />

            <TextView
                android:id="@+id/text_connection_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_caption"
                android:textColor="?android:attr/textColorTertiary"
                android:maxLines="1"
                android:ellipsize="end"
                android:visibility="gone"
                tools:text="Connected 42 times"
                tools:visibility="visible" />

        </LinearLayout>

        <View
            android:id="@+id/indicator_status"
            android:layout_width="@dimen/connection_status_indicator_size"
            android:layout_height="@dimen/connection_status_indicator_size"
            android:background="@drawable/connection_status_indicator"
            android:layout_marginStart="@dimen/space_sm" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>