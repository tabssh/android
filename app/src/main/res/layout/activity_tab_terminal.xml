<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.TabTerminalActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:visibility="gone">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            style="@style/Widget.TabSSH.Toolbar" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_height"
            app:tabMode="scrollable"
            app:tabGravity="start"
            app:tabMaxWidth="@dimen/tab_max_width"
            app:tabMinWidth="@dimen/tab_min_width"
            style="@style/Widget.TabSSH.TabLayout" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        <!-- Terminal display area with ViewPager2 for swipe support -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/terminal_background" />

        <!-- Single terminal view (used when swipe is disabled) -->
        <io.github.tabssh.ui.views.TerminalView
            android:id="@+id/terminal_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/terminal_background"
            android:visibility="gone"
            app:terminalFontSize="@dimen/terminal_text_size_default"
            app:terminalFontFamily="monospace"
            app:showScrollbar="true"
            app:scrollbackLines="1000" />

        <!-- Menu FAB (Hidden by default, shows on edge tap) -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_menu"
            android:contentDescription="Open menu and tabs"
            app:fabSize="mini"
            app:backgroundTint="?attr/colorSecondaryContainer"
            app:tint="?attr/colorOnSecondaryContainer"
            app:elevation="6dp"
            android:visibility="gone" />

        <!-- Multiplexer Status Indicator -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_multiplexer_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="tmux"
            android:textSize="11sp"
            app:chipBackgroundColor="@color/terminal_green"
            app:chipMinHeight="24dp"
            app:chipIcon="@drawable/ic_terminal"
            app:chipIconSize="14dp"
            app:chipIconTint="@android:color/white"
            android:textColor="@android:color/white"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true" />

        </FrameLayout>

        <!-- Custom Keyboard Bar -->
        <io.github.tabssh.ui.keyboard.CustomKeyboardView
            android:id="@+id/custom_keyboard"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?attr/colorSurfaceVariant"
            android:visibility="visible" />

        <!-- Function keys row -->
        <HorizontalScrollView
            android:id="@+id/function_keys_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/function_key_height"
            android:background="?attr/colorSurfaceVariant"
            android:scrollbars="none"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/space_sm">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_ctrl"
                    style="@style/Widget.TabSSH.Button.Outlined"
                    android:layout_width="@dimen/function_key_width"
                    android:layout_height="@dimen/function_key_height"
                    android:layout_marginEnd="@dimen/space_xs"
                    android:text="Ctrl"
                    android:textSize="12sp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_alt"
                    style="@style/Widget.TabSSH.Button.Outlined"
                    android:layout_width="@dimen/function_key_width"
                    android:layout_height="@dimen/function_key_height"
                    android:layout_marginEnd="@dimen/space_xs"
                    android:text="Alt"
                    android:textSize="12sp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_esc"
                    style="@style/Widget.TabSSH.Button.Outlined"
                    android:layout_width="@dimen/function_key_width"
                    android:layout_height="@dimen/function_key_height"
                    android:layout_marginEnd="@dimen/space_xs"
                    android:text="Esc"
                    android:textSize="12sp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_tab"
                    style="@style/Widget.TabSSH.Button.Outlined"
                    android:layout_width="@dimen/function_key_width"
                    android:layout_height="@dimen/function_key_height"
                    android:layout_marginEnd="@dimen/space_xs"
                    android:text="Tab"
                    android:textSize="12sp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_arrow_up"
                    style="@style/Widget.TabSSH.Button.Outlined"
                    android:layout_width="@dimen/function_key_width"
                    android:layout_height="@dimen/function_key_height"
                    android:layout_marginEnd="@dimen/space_xs"
                    android:text="↑"
                    android:textSize="14sp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_arrow_down"
                    style="@style/Widget.TabSSH.Button.Outlined"
                    android:layout_width="@dimen/function_key_width"
                    android:layout_height="@dimen/function_key_height"
                    android:layout_marginEnd="@dimen/space_lg"
                    android:text="↓"
                    android:textSize="14sp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />

            </LinearLayout>

        </HorizontalScrollView>

        <!-- Bottom action bar (hidden by default - tap bottom edge to show) -->
        <LinearLayout
            android:id="@+id/bottom_action_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_bar_height"
            android:orientation="horizontal"
            android:background="?attr/colorSurface"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/space_md"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_keyboard"
                style="@style/Widget.TabSSH.Button.Outlined"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/space_sm"
                android:text="Kbd"
                android:drawableTop="@drawable/ic_keyboard" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_snippets"
                style="@style/Widget.TabSSH.Button.Outlined"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/space_sm"
                android:text="Snip"
                android:drawableTop="@drawable/ic_code" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_files"
                style="@style/Widget.TabSSH.Button.Outlined"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/space_sm"
                android:text="Files"
                android:drawableTop="@drawable/ic_folder" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_paste"
                style="@style/Widget.TabSSH.Button.Outlined"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/space_sm"
                android:text="Paste"
                android:drawableTop="@drawable/ic_paste" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_menu"
                style="@style/Widget.TabSSH.Button.Outlined"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Menu"
                android:drawableTop="@drawable/ic_menu" />

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>