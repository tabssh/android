<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Tunnel type icon -->
        <ImageView
            android:id="@+id/icon_tunnel_type"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="Tunnel type"
            android:src="@drawable/ic_terminal"
            app:tint="?attr/colorPrimary" />

        <!-- Tunnel info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_tunnel_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Local Forward (-L)"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_tunnel_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="8080 â†’ remote:80"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="?android:textColorSecondary" />

            <TextView
                android:id="@+id/text_tunnel_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="ðŸŸ¢ Active"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall" />
        </LinearLayout>

        <!-- Control buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Toggle button (start/stop) -->
            <ImageButton
                android:id="@+id/btn_toggle_tunnel"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Toggle tunnel"
                android:src="@drawable/ic_star_filled" />

            <!-- Delete button -->
            <ImageButton
                android:id="@+id/btn_delete_tunnel"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Delete tunnel"
                android:src="@drawable/ic_close"
                app:tint="?attr/colorError" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
